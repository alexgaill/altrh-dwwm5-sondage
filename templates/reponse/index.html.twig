{% extends 'base.html.twig' %}

{% block title %}Liste des sondages{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div>
            <h1>Voici la liste des réponses que nous proposons.</h1>
            <p>Sélectionnez celui qui vous intéresse et répondez aux questions.</p>
        </div>
        <div class="mt-5">
            <table class="table table-striped table-hover table-primary">
                <thead>
                    <tr>
                        <th>Titre de la réponse</th>
                        <th>Participer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reponse in reponses %}
                        <tr>
                            <td>{{reponse.titre}}</td>
                            <td><a href="{{ path("updateReponse", {id: reponse.id})}}"><button class="btn btn-info">Modifier</button></a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center">Pas de réponse de disponible pour le moment.</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="2"><a class="nav-link text-light" href="{{ path("createReponse")}}"><button class="btn btn-primary"> Ajouter une réponse</button></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
